# Environment variables template
# Copy this file to .env and update with your actual values

# Server configuration
PORT=3000
HOST=localhost

# Database configuration
DATABASE_URL="postgresql://username:password@localhost:5432/inventory_management_db?schema=public"

# Application settings
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-please-change-in-production
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-here-please-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Application Name
APP_NAME="Inventory Management System"
